{
    "version": 9,
    "configurePresets": [
        {
            "name": "configure-base",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "USE_OPENALSOFT":"ON"
            },
            "installDir":"${sourceParentDir}/dist",
            "binaryDir": "${sourceParentDir}/sgbuild"
